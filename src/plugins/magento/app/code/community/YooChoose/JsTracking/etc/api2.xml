<?xml version="1.0"?>

<config>
    <api2>
        <resource_groups>
            <yoochoose translate="title" module="YooChoose_JsTracking">
                <title>YooChoose</title>
                <sort_order>5</sort_order>
            </yoochoose>
        </resource_groups>
         <resources>
            <ycsubscriber translate="title" module="api2">
                <group>yoochoose</group>
                <sort_order>10</sort_order>
                <model>yoochoose_jstracking/api2_ycsubscriber</model>
                <title>YC Customers</title>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <attributes translate="id,subscriber_id,subscriber_code" module="api2">
                    <id>Customer Id</id>
                    <subscriber_id>Subscriber Id</subscriber_id>
                    <subscriber_code>Subscriber Code</subscriber_code>
                </attributes>
                <routes>
                    <route_collection>
                        <route>/yoochoose/customers</route>
                        <action_type>collection</action_type>
                    </route_collection>
                </routes>
                <versions>1</versions>
            </ycsubscriber>
            <ycproducts translate="title" module="api2">
                <group>yoochoose</group>
                <sort_order>10</sort_order>
                <model>yoochoose_jstracking/api2_ycproducts</model>
                <title>Products</title>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <attributes translate="entity_id,title,price,url,image,image_size,categories,description,tags" module="api2">
                    <entity_id>Id</entity_id>
                    <title>Title</title>
                    <price>Price</price>
                    <url>URL</url>
                    <image>Image links</image>
                    <image_size>Image sizes</image_size>
                    <categories>Categories</categories>
                    <description>Description</description>
                    <tags>Tags</tags>
                </attributes>
                <routes>
                    <route_collection>
                        <route>/yoochoose/products</route>
                        <action_type>collection</action_type>
                    </route_collection>
                </routes>
                <versions>1</versions>
            </ycproducts>
            <ycstoreview translate="title" module="api2">
                <group>yoochoose</group>
                <sort_order>10</sort_order>
                <model>yoochoose_jstracking/api2_ycstoreview</model>
                <title>Store Views</title>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <attributes translate="id,name,item_type_id,languange" module="api2">
                    <id>Id</id>
                    <name>Name</name>
                    <item_type_id>Item Type Id</item_type_id>
                    <languange>Language</languange>
                </attributes>
                <routes>
                    <route_collection>
                        <route>/yoochoose/storeviews</route>
                        <action_type>collection</action_type>
                    </route_collection>
                </routes>
                <versions>1</versions>
            </ycstoreview>
         </resources>
    </api2>
</config>